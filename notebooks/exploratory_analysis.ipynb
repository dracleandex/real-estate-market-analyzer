import pandas as pd
import sqlite3
import matplotlib.pyplot as plt
import seaborn as sns
import os
import sys

# 1. Connect to your existing database
# We go up one level (..) to find the database file
db_path = os.path.join('..', 'real_estate.db')
conn = sqlite3.connect(db_path)

# 2. Load the data
query = "SELECT * FROM listings"
df = pd.read_sql(query, conn)

# 3. Quick Data Overview
print(f"Total Properties: {len(df)}")
print(f"Cities Covered: {df['city'].unique()}")
display(df.head())

# 4. Visualization: Price Distribution by City
if not df.empty:
    plt.figure(figsize=(12, 6))
    sns.boxplot(data=df, x='city', y='price')
    plt.title('Price Distribution by City')
    plt.xticks(rotation=45)
    plt.show()

# 5. Insight: Correlation
# Do more bedrooms = higher price?
if not df.empty:
    plt.figure(figsize=(8, 6))
    sns.scatterplot(data=df, x='bedrooms', y='price', hue='city')
    plt.title('Bedrooms vs. Price')
    plt.show()